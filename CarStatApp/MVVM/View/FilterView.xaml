<UserControl x:Class="CarStatAppUI.MVVM.View.FilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarStatAppUI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Filter"
                   Foreground="#F0A500"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <TextBox Width="250" Height="40" VerticalAlignment="Center"
                     HorizontalAlignment="Left" Margin="90,0,0,0"
                     Grid.Column="1" Style="{StaticResource SearchTextBox }"/>
        
    </StackPanel>
</UserControl>
